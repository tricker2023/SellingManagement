<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DebtManagement"
    android:background="@color/background"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/body3">
        <ImageButton
            android:id="@+id/statisticManagement_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/arrow_left"
            android:contentDescription="@string/app_name"
            android:background="@color/background"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Xem báo cáo thống kê"
            android:textSize="@dimen/heading2"
            android:fontFamily="@font/roboto_bold"
            android:gravity="start"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="@dimen/body1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/statisticManagement_DATHANG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Đặt hàng"
                android:background="@drawable/background_view"
                android:backgroundTint="@color/white"
                android:textSize="@dimen/heading2"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"/>
            <TextView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:text=" "/>
            <TextView
                android:id="@+id/statisticManagement_NHAPHANG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Nhập hàng"
                android:background="@drawable/background_view"
                android:backgroundTint="@color/button"
                android:textSize="@dimen/heading2"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"/>
        </LinearLayout>
        <ListView
            android:id="@+id/statisticManagement_listView"
            android:layout_marginTop="@dimen/body1"
            android:contentDescription="@string/app_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"/>
        <TextView
            android:id="@+id/statisticManagement_noData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:text="Không có dữ liệu"
            android:fontFamily="@font/roboto"
            android:textSize="@dimen/body1"
            android:visibility="gone"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/body1"
        android:layout_marginVertical="@dimen/body1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Tổng số tiền"
            android:textSize="@dimen/heading2"
            android:fontFamily="@font/roboto_bold"
            android:gravity="start"/>
        <TextView
            android:id="@+id/statisticManagement_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text="1000"
            android:textSize="@dimen/heading2"
            android:fontFamily="@font/roboto_bold"
            android:gravity="end"/>
    </LinearLayout>
</LinearLayout>