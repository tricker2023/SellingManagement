<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:padding="@dimen/body2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/background_view"
        android:backgroundTint="@color/primary">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã công nợ:"
                android:layout_weight="1"
                android:fontFamily="@font/roboto"
                android:textColor="@color/white"
                android:textSize="@dimen/body1"/>
            <TextView
                android:id="@+id/itemDebt_idDebt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="CN1"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto"
                android:textSize="@dimen/body1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên tài khoản:"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto"
                android:textSize="@dimen/body1"/>
            <TextView
                android:id="@+id/itemDebt_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:textColor="@color/white"
                android:text="113"
                android:fontFamily="@font/roboto"
                android:textSize="@dimen/body1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loại"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto"
                android:textSize="@dimen/body1"/>
            <TextView
                android:id="@+id/itemDebt_creditDebit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:textColor="@color/white"
                android:text="Nợ"
                android:fontFamily="@font/roboto"
                android:textSize="@dimen/body1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số tiền:"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:fontFamily="@font/roboto"
                android:textSize="@dimen/body1"/>
            <TextView
                android:id="@+id/itemDebt_moneys"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:textColor="@color/white"
                android:text="100"
                android:fontFamily="@font/roboto"
                android:textSize="@dimen/body1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày tháng:"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto"
                android:textSize="@dimen/body1"/>
            <TextView
                android:id="@+id/itemDebt_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Công ty"
                android:textColor="@color/white"
                android:gravity="end"
                android:fontFamily="@font/roboto"
                android:textSize="@dimen/body1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/itemDebt_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sửa"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:background="@drawable/background_view"
                android:fontFamily="@font/roboto"
                android:textSize="@dimen/body1"/>
            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:text=" "
                android:contentDescription="@string/app_name"/>
            <TextView
                android:id="@+id/itemDebt_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="Xóa"
                android:background="@drawable/background_view"
                android:fontFamily="@font/roboto"
                android:textSize="@dimen/body1"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>